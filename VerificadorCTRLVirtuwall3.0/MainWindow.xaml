<Window x:Class="VerificadorCTRLVirtuwall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerificadorCTRLVirtuwall"
        mc:Ignorable="d"
        Title="Verificador CTRL Virtuwall" 
        Height="900" Width="840" 
        MinHeight="800" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F5">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                BorderBrush="{StaticResource VirtuwallGreenBrush}" 
                BorderThickness="0,0,0,2" 
                Margin="0,0,0,10" 
                Padding="0,0,0,10">
            <TextBlock Text="Virtuwall | Verificador CTRL" 
                       FontSize="24" 
                       FontWeight="Light" 
                       Foreground="{StaticResource VirtuwallGreenBrush}" />
        </Border>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">

            <Label Content="FQDN do Servidor (Registro A):" FontWeight="Bold" FontSize="14"/>
            <TextBox x:Name="fqdnTextBox" Text="ctrl.poc.virtuwall.lan" FontSize="14" Padding="8" BorderThickness="1" BorderBrush="#ABADB3"/>

            <Label Content="Dominio Base do Cliente (para Opcao 15 e SRV):" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <TextBox x:Name="domainTextBox" Text="poc.virtuwall.lan" FontSize="14" Padding="8" BorderThickness="1" BorderBrush="#ABADB3"/>
            <TextBlock Text="Sera usado para Opcao 15 (Sufixo DNS) e o registro: _barcomanagement._tcp.[dominio]" FontSize="10" Foreground="Gray" Margin="5,2,0,0"/>

            <Label Content="Porta Esperada (Registro SRV):" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <TextBox x:Name="portTextBox" Text="8883" FontSize="14" Padding="8" BorderThickness="1" BorderBrush="#ABADB3"/>

            <Label Content="Selecione o Adaptador de Rede para Testar:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <ComboBox x:Name="adapterComboBox" FontSize="14" Padding="8,5"/>
            <TextBlock Text="Apenas adaptadores de rede com status 'Ativo' (Up) sao listados." FontSize="10" Foreground="Gray" Margin="5,2,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="startButton" 
                        Content="Iniciar Verificacao" 
                        Background="{StaticResource VirtuwallGreenBrush}"
                        Foreground="White"
                        Width="200"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="OnStartButtonClick"/>

                <Button x:Name="clearButton" 
                        Content="Limpar Resultados" 
                        Background="#E0E0E0"
                        Foreground="Black"
                        Width="200"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Margin="10,0,0,0"
                        BorderThickness="0"
                        Click="OnClearButtonClick"/>
            </StackPanel>
        </StackPanel>

        <Border x:Name="StatusCard" Grid.Row="2" CornerRadius="4" Margin="0,20,0,10" Padding="20" Background="{StaticResource StatusGrayBrush}" Visibility="Collapsed"
                BorderThickness="1" BorderBrush="#DDDDDD">
            <TextBlock x:Name="StatusText" Text="Executando testes... Por favor, aguarde." 
                       HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#37474F"/>
        </Border>

        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <Label Content="Relatorio de Verificacao:" 
                   FontWeight="Bold" 
                   FontSize="14"
                   DockPanel.Dock="Top" 
                   Margin="0,0,0,5" Padding="0"/>
            <RichTextBox x:Name="logRichTextBox" 
                         IsReadOnly="True" 
                         Background="White" 
                         FontFamily="Consolas" 
                         FontSize="14" 
                         BorderThickness="1" 
                         BorderBrush="#ABADB3" 
                         VerticalScrollBarVisibility="Visible"/>
        </DockPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,0" VerticalAlignment="Bottom">
            <TextBlock Text="(c) 2025 Virtuwall. Todos os direitos reservados." HorizontalAlignment="Center" Foreground="Gray" FontSize="10"/>
            <TextBlock Text="Desenvolvido por Marco Antonio." HorizontalAlignment="Center" Foreground="Gray" FontSize="10"/>
        </StackPanel>
    </Grid>
</Window>